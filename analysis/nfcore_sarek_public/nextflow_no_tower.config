
/*
Custom parameters for trimming, original file from https://github.com/nf-core/sarek/blob/3.4.3/conf/modules/trimming.config

Caps read length to 150 bp to account for some having 151 bp per read while others 150 bp.
*/
process {
    withName: 'FASTP' {
        ext.args = "--max_len1 150 --max_len2 150 --disable_adapter_trimming --disable_quality_filtering --disable_trim_poly_g"
    }
}
